<h1> Add Genre </h1>
{{#if error}} 
	<span>{{error}}</span>
{{/if}}
<form method="POST" action="api/genres">
	<div class="form-group">
		<label> ID </label>
		<input type="text" name="id" class="form-control" placeholder="Add ID">
	</div>
	<div class="form-group">
		<label> Name </label>
		<input type="text" name="name" class="form-control" placeholder="Add Genre Name">
	</div>
	<input type="submit" class="btn btn-primary" value="Save">
</form>